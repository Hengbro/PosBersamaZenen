<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/marginMedium">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_imagemenu"
                        android:layout_width="@dimen/buttonImage"
                        android:layout_height="@dimen/buttonImage"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/buttonImagePadding"
                        android:src="@drawable/asset_ic_hamburger_menu" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/marginExtra"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btn_library"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingNormal"
                            android:text="Library"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textColor="@color/natural_900" />

                        <TextView
                            android:id="@+id/btn_favorites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingNormal"
                            android:text="Favorites"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/btn_keypad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingNormal"
                            android:text="Keypad"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textColor="@color/natural_900" />

                        <TextView
                            android:id="@+id/btn_tables"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingNormal"
                            android:text="Tables"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textColor="@color/natural_900" />

                        <TextView
                            android:id="@+id/btn_bills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingNormal"
                            android:text="Bills"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btn_imagelistmenu"
                        android:layout_width="@dimen/buttonImage"
                        android:layout_height="@dimen/buttonImage"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/marginNormal"
                        android:padding="@dimen/buttonImagePadding"
                        android:src="@drawable/asset_ic_kebab_menu" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/mainFrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/paddingNormal"
                    android:layout_marginEnd="@dimen/marginNormal"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/gray4"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_noproduct"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingSmall">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="No products"
                        android:textAppearance="@style/textAppearance.Body2"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/marginNormal"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/buttonImage"
                        android:layout_height="@dimen/buttonImage"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/buttonImagePadding"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:src="@drawable/asset_ic_kebab_menu" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/medium_height"
                    android:orientation="horizontal"
                    android:background="@color/gray5">

                    <TextView
                        android:id="@+id/txt_having"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Having here"
                        android:visibility="visible"
                        android:textAppearance="@style/textAppearance.Body3"
                        android:textColor="@color/natural_900" />

                    <TextView
                        android:id="@+id/txt_togo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="To go"
                        android:visibility="gone"
                        android:textAppearance="@style/textAppearance.Body3"
                        android:textColor="@color/natural_900" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/paddingNormal"
                        android:paddingHorizontal="@dimen/paddingNormal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/paddingSmall"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="centerCrop"
                                android:src="@drawable/asset_ic_user"
                                android:visibility="gone"
                                android:tint="@color/colorPrimary" />

                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:background="@color/colorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/paddingSmall"
                                    android:gravity="center"
                                    android:text="AL"
                                    android:textAppearance="@style/textAppearance.Body3"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"/>

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="@dimen/_3sdp"
                                    android:layout_marginStart="@dimen/marginNormal"
                                    android:text="Alvin lianto"
                                    android:textAppearance="@style/textAppearance.Body3"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/marginNormal"
                                        android:text="+62821********"
                                        android:textAppearance="@style/textAppearance.Caption2"/>

                                    <View
                                        android:layout_width="2dp"
                                        android:layout_height="2dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="@dimen/marginSmall"
                                        android:background="@color/dark"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="example@gmail.com"
                                        android:textAppearance="@style/textAppearance.Caption2"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/buttonImage"
                            android:layout_height="@dimen/buttonImage"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/buttonImagePadding"

                            android:src="@drawable/baseline_chevron_right" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray4" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/paddingSmall"
                        android:paddingHorizontal="@dimen/paddingNormal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/paddingSmall"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_gravity="center_vertical"
                                android:scaleType="centerCrop"

                                android:src="@drawable/asset_ic_table_management"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/_3sdp"
                                android:layout_marginStart="@dimen/marginNormal"
                                android:text="Add a table"
                                android:textAppearance="@style/textAppearance.Body3"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/buttonImage"
                            android:layout_height="@dimen/buttonImage"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/buttonImagePadding"
                            android:src="@drawable/asset_ic_right_arrow" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray4" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/marginNormal"
                        android:paddingStart="@dimen/paddingSmall"
                        android:paddingEnd="@dimen/paddingNormal"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Martabak manis x2"
                                android:textAppearance="@style/textAppearance.Body3"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Small, Normal sugar\nAdd cheese\nAdd chocolate\nAdd Peanult"
                                android:textAppearance="@style/textAppearance.Caption1" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp. 140.000"
                            android:textAppearance="@style/textAppearance.Body3.Bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray4" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/marginNormal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name product"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Rp. 25.000"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:textAppearance="@style/textAppearance.Body2" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/gray4" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginNormal"
                        android:layout_marginTop="@dimen/marginNormal"
                        android:layout_marginEnd="@dimen/marginNormal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 saved product"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textStyle="bold"
                            android:textColor="@color/gray2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Rp. 155.000"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:textAppearance="@style/textAppearance.Body2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/marginNormal"
                        android:layout_marginTop="@dimen/marginNormal"
                        android:layout_marginEnd="@dimen/marginNormal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subtotal"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Rp. 155.000"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:textAppearance="@style/textAppearance.Body2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/marginNormal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taxes"
                            android:textAppearance="@style/textAppearance.Body2"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="Rp. 15,500"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:textAppearance="@style/textAppearance.Body2" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/marginNormal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/paddingSmall"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        style="@style/Button.OutlineButton.Primary"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/normal_height"
                        android:layout_weight="1"
                        android:text="Save bill" />

                    <com.google.android.material.button.MaterialButton
                        style="@style/Button.OutlineButton.Primary"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/normal_height"
                        android:layout_marginStart="@dimen/marginSmall"
                        android:layout_weight="1"
                        android:text="Print bill" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_change"
                    style="@style/Button.Normal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_height"
                    android:layout_margin="@dimen/marginSmall"
                    android:text="Charge Rp. 165,000" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_dragdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/medium_height"
                    android:layout_height="@dimen/medium_height"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/gray5"
                    android:padding="@dimen/paddingNormal"
                    android:src="@drawable/asset_ic_drag_drop"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/marginNormal"
                    android:text="Drag and drop"
                    android:textAppearance="@style/textAppearance.Body2"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Arange your favorite and"
                    android:textAppearance="@style/textAppearance.Body2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="best selling products on the grid"
                    android:textAppearance="@style/textAppearance.Body2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="pages for tester acces"
                    android:textAppearance="@style/textAppearance.Body2" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/Button.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/marginNormal"
                android:padding="@dimen/paddingNormal"
                android:text="Done editing"
                android:textAppearance="@style/textAppearance.Body2" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>